---
interface Props {
  intro: string;
  points: string[];
}

const { intro, points } = Astro.props;
---

<div class="flex flex-col space-y-2 ">
    <p class="text-gray-600 dark:text-gray-300 ">{intro}</p>
    <ul class="list-disc list-inside text-gray-600 dark:text-gray-300 ">
        {points.map((point) => (
        <li>{point}</li>
        ))}
    </ul>
</div>
